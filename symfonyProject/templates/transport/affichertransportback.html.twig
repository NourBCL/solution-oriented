{% extends 'base-back.html.twig' %}


{% block title %}Listes des Categorie de transport{% endblock %}

{% block body %}
    <div class="content-body">
        <div class="container-fluid">
            <div class="page-titles">
                <h4>La liste des transport</h4>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active"><a href="{{ path("ajoutertransportadmin") }}">Ajouter un nouveau transport</a></li>
                </ol>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-responsive-sm">
                                <thead>
                                <tr>


                                    {#  <th class="text-center">Supprimer</th>
                                    <th class="text-center">Modifier</th>#}
                                    <th class="text-center"> ID</th>
                                    <th class="text-center">Lieu_depart</th>
                                    <th class="text-center">Lieu_arrivee</th>
                                    <th class="text-center">Date_dep</th>
                                    <th class="text-center">Date_arrivee</th>
                                    <th class="text-center">Date_retour</th>
                                    <th class="text-center">Heure_depart</th>
                                    <th class="text-center">Heure_arrivee</th>
                                    <th class="text-center">Heure_retour</th>
                                    <th class="text-center">Nb_place</th>
                                    <th class="text-center">Nb_bagage</th>
                                    <th class="text-center">Prix_t</th>
                                    <th class="text-center">Disponibilite </th>
                                    <th class="text-center">categorieT </th>
                                    <th class="text-center">Supprimer</th>
                                    <th class="text-center">Modifier</th>






                                </tr>
                                </thead>
                                <tbody>
                                {% for transport in tabletransport %}
                                    <tr>

                                    <tr>
                                    {#  <td class="text-center"><a type="button" href="{{ path('supprimertransport', {'id': transport.id}) }}" class="btn btn-rounded btn-outline-danger">Supprimer</a></td>

                                    <td class="text-center"><a type="button" href="{{ path('modifiertransport', {'id': transport.id}) }}" class="btn btn-rounded btn-outline-warning">Modifier</a></td>#}

                                    <td>{{ transport.id }}</td>
                                        <td>{{ transport.lieuDepart }}</td>
                                        <td>{{ transport.lieuArrivee }}</td>
                                        <td>{{ transport.dateDep ? transport.dateDep|date('Y-m-d') : '' }}</td>
                                        <td>{{ transport.dateArrivee ? transport.dateArrivee|date('Y-m-d') : '' }}</td>
                                        <td>{{ transport.dateRetour ? transport.dateRetour|date('Y-m-d') : '' }}</td>
                                        <td>{{ transport.heureArrivee ? transport.heureArrivee|date('H:i:s') : '' }}</td>
                                        <td>{{ transport.heureDepart ? transport.heureDepart|date('H:i:s') : '' }}</td>
                                        <td>{{ transport.heureRetour ? transport.heureRetour|date('H:i:s') : '' }}</td>
                                        <td>{{ transport.nbPlace }}</td>
                                        <td>{{ transport.nbBagage }}</td>
                                        <td>{{ transport.prixT }}</td>
                                        <td>{{ transport.disponibilite ? 'Yes' : 'No' }}</td>
                                        <td>{{ transport.categorieT }}</td>
                                    <td class="text-center"><a type="button" href="{{ path('supprimertransport', {'id': transport.id}) }}" class="btn btn-rounded btn-outline-danger">Supprimer</a></td>

                                    <td class="text-center"><a type="button" href="{{ path('modifiertransport', {'id': transport.id}) }}" class="btn btn-rounded btn-outline-warning">Modifier</a></td>

                                    </tr>


                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /# card -->
            </div>
        </div>
    </div>
{% endblock %}

