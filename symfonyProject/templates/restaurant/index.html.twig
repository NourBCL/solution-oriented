{% extends 'base.html.twig' %}

{% block title %}Restaurant index{% endblock %}

{% block body %}
    <h1>Restaurant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_resto</th>
                <th>NumTel</th>
                <th>Horraire_ouverture</th>
                <th>Horraire_fermeture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.id }}</td>
                <td>{{ restaurant.nomResto }}</td>
                <td>{{ restaurant.numTel }}</td>
                <td>{{ restaurant.horraireOuverture ? restaurant.horraireOuverture|date('H:i:s') : '' }}</td>
                <td>{{ restaurant.horraireFermeture ? restaurant.horraireFermeture|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('restaurant_show', {'id': restaurant.id}) }}">show</a>
                    <a href="{{ path('restaurant_edit', {'id': restaurant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('restaurant_new') }}">Create new</a>
{% endblock %}
